<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="ReactorControl.Views.InterfaceState">
	<UserControl.Styles>
		<Style Selector="Button">
			<Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
			<Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
			<Setter Property="Margin" Value="2"></Setter>
		</Style>
	</UserControl.Styles>
	<StackPanel>
		<CheckBox Margin="5,0" IsChecked="{Binding IsReceiving}" Checked="Remote_Checked">Remote Control</CheckBox>
		<Button Background="LightGreen" Click="Reload_Click">Reload Params</Button>
		<Button Background="LightBlue" Click="Save_Click">Save NVS</Button>
		<Button Background="LightCoral" Click="Reboot_Click">Reboot</Button>
	</StackPanel>
</UserControl>
